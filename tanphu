--==================================================
-- L·∫§Y MPS T·ª™ MODEL (gi·ªëng TEST)
--==================================================
local function getMpsFromModel(pet)
    local mpsObj = pet:FindFirstChild("MPS")
    if mpsObj and mpsObj.Value ~= nil then
        local raw = tostring(mpsObj.Value)
        return parseMps(raw), raw
    end

    local bestText = nil
    for _, d in ipairs(pet:GetDescendants()) do
        if d:IsA("TextLabel") or d:IsA("TextButton") then
            local t = d.Text
            if t and t ~= "" then
                local up = t:upper()
                if up:find("/S") or up:find("M/S") or up:find("PERSEC") then
                    bestText = t
                    break
                end
            end
        end
    end

    if bestText then
        return parseMps(bestText), bestText
    end

    return 0, nil
end

--==================================================
-- MAIN LOOP
--==================================================
warn("[PetsFinder] ‚úÖ v9 started.")

spawn(function()
    while task.wait(3) do
        local jobId   = tostring(game.JobId or "N/A")
        local placeId = game.PlaceId

        local candidates = {}
        local petsFolder = workspace:FindFirstChild("Pets")

        if petsFolder then
            candidates = petsFolder:GetChildren()
        else
            for _, inst in ipairs(workspace:GetChildren()) do
                if inst:IsA("Model") or inst:IsA("Folder") then
                    table.insert(candidates, inst)
                end
            end
        end

        for _, pet in ipairs(candidates) do
            -- t√¨m t√™n brainrot trong model
            local displayName = detectTargetFromModel(pet)
            if not displayName then
                -- model n√†y kh√¥ng c√≥ text n√†o tr√πng v·ªõi list brainrot ‚Üí b·ªè qua
                continue
            end

            local mps = select(1, getMpsFromModel(pet))
            if mps < MIN_TARGET_MPS then
                -- brainrot nh∆∞ng MPS nh·ªè < 2M ‚Üí b·ªè
                continue
            end

            local key = string.lower(displayName) .. "_" .. jobId

            -- log debug 1 l·∫ßn cho m·ªói pet (ƒë·ªÉ b·∫°n xem F9)
            if not sentHigh[key] and not sentOver[key] then
                warn(string.format("[PetsFinder] Found target %s | MPS=%.0f", displayName, mps))
            end

            if mps <= SPLIT_MPS then
                -- ===== NH√ÅNH ‚â§ 50M =====
                if not sentHigh[key] then
                    sentHigh[key] = true
                    AddPetItem(displayName, mps, jobId, false)

                    if autoJoinEnabled and not autoJoinedJobs[jobId] then
                        autoJoinedJobs[jobId] = true
                        pcall(function()
                            TeleportService:TeleportToPlaceInstance(game.PlaceId, jobId, LocalPlayer)
                        end)
                    end

                    local joinLink = ("https://chillihub1.github.io/chillihub-joiner/?placeId=%s&gameInstanceId=%s")
                        :format(placeId, jobId)

                    local content = table.concat({
                        "üîî **Pet Found! (Brainrot, ‚â§50M)**",
                        "üêæ Name: " .. displayName,
                        "üí∏ MPS: " .. formatMpsShort(mps) .. "/s",
                        "üÜî Job ID: `" .. jobId .. "`",
                        "üåê [JOIN HERE](" .. joinLink .. ")"
                    }, "\n")

                    sendWebhook(webhook_high, { content = content })
                end
            else
                -- ===== NH√ÅNH > 50M =====
                if not sentOver[key] then
                    sentOver[key] = true
                    AddPetItem(displayName, mps, jobId, true)

                    local joinLink = ("https://chillihub1.github.io/chillihub-joiner/?placeId=%s&gameInstanceId=%s")
                        :format(placeId, jobId)

                    local content = table.concat({
                        "üîî **Pet >50M Found! (Brainrot)**",
                        "üêæ Name: " .. displayName,
                        "üí∏ MPS: " .. formatMpsShort(mps) .. "/s",
                        "üÜî Job ID: `" .. jobId .. "`",
                        "üåê [JOIN HERE](" .. joinLink .. ")"
                    }, "\n")

                    sendWebhook(webhook_over50, { content = content })
                end
            end
        end
    end
end)
